# This file is for unifying the coding style for different editors and IDEs.
# More information at https://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
max_line_length = 80
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{toml,rs}]
indent_size = 4
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
